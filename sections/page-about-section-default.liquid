        <div class="review_content">
          {{block.settings[s_review]}}
        </div>
        <div class="date">
          {{block.settings[s_date]}}
        </div>
      </div>
      {% endif %}
      {% endfor %}
    </div>
  </div>
  {% when "info" %}
  <div class="about-info-wrapper col-12 text-center">
    <div class="container">
      <div class="heading">{{block.settings.heading}}</div>
      <div class="row about-infos about-infos d-flex justify-content-between align-items-center flex-wrap">
        <div class="span-line-wrapper col-1"><div class="span-line"></div></div>
        {% for i in (1..3) %}
        {% assign s_title = "title" | append: i %}
        {% assign s_caption = "caption" | append: i %}
        <div class="about-info col-4 col-md-2">
          <div class="title text-uppercase">{{block.settings[s_title]}}</div>
          <div class="caption text-uppercase">{{block.settings[s_caption]}}</div>
        </div>
        {% if forloop.last == false %}
        <div class="span-line-wrapper col-4 col-md-2"><div class="span-line"></div></div>
        {% endif %}
        {% endfor %}
        <div class="span-line-wrapper col-1"><div class="span-line"></div></div>
      </div>
    </div>
  </div>
  {% when "blog" %}
  <div class="about-blog-wrapper container">
    <div class="heading">{{block.settings.heading}}</div>
    {% if block.settings.blog != blank %}
    {% assign blog = blogs[block.settings.blog] %}
    {% if blog.articles.size > 0 %}
    <div class="row">
      {% for article in blog.articles limit: block.settings.limit  %}
      <div class="col-12 col-md-4">
        <div class="article-block">
          {% if article.image != blank %}
          <a href="{{article.url}}"><img class="w-100 lazyload" data-src="{{article.image | img_url: "master"}}" /></a>
          {% endif %}
          <div class="blog-title text-left">
            <a href="{{article.url}}">{{article.title}}</a>
          </div>
          <div class="blog-date">
            <span class="author">{{article.author}}</span>, {{article.published_at | date: "%b %d, %Y"}}
          </div>
          <div class="blog-comment">
            {{ "blogs.comments.comments_with_count" | t: count: article.comments_count  }}
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
    {% endif %}
    {% if block.settings.button != blank %}
    <a class="article-more d-flex align-items-center justify-content-center pt-3" href="{{block.settings.url}}">

      {{block.settings.button}}
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 192 512"><path fill="currentColor" d="M187.8 264.5L41 412.5c-4.7 4.7-12.3 4.7-17 0L4.2 392.7c-4.7-4.7-4.7-12.3 0-17L122.7 256 4.2 136.3c-4.7-4.7-4.7-12.3 0-17L24 99.5c4.7-4.7 12.3-4.7 17 0l146.8 148c4.7 4.7 4.7 12.3 0 17z" ></path></svg>
    </a>
    {% endif %}
    {% endif %}
  </div>
  
  {% when "instagram" %}
  <div class="about-instagram-default about-instagram-wrapper">
    <div class="heading">{{block.settings.heading}}</div>
    <div class="row">
      {% for i in (1..10) %}
      {% assign s_image = "image" | append: i %}
      {% assign s_url = "url" | append: i %}
      {% if block.settings[s_image] != blank %}
      <div class="about-insta">
        <a href="{{block.settings[s_url]}}"><img class="lazyload" data-src="{{block.settings[s_image] | img_url: "master"}}" /></a>
      </div>
      {% endif %}
      {% endfor %}
    </div>
  </div>
  {% else %}
  {% endcase %}
  {% endfor %}
</div>

<div class="page-about-section-default" data-section-id="{{section.id}}" data-section-type="page-about">
  {% for block in section.blocks %}
  {% case block.type %}
  {% when "banner" %}
  <div class="container about-default-banner">
    <img class="w-100 lazyload" {% if block.settings.image != blank %} data-src="{{ block.settings.image | img_url: "master"}}"{% endif %} />
    <div class="position-absolute alignment-{{block.settings.alignment}}">
      {% if block.settings.text != blank %}
      <div class="heading">{{ block.settings.text }}</div>
      {% endif %}
    </div>
  </div>
  {% when "text" %}
  <div class="about-default-text">
    <div class="container text-center">
      <div class="row justify-content-center">
        <div class="col-12 col-md-8">
          {% if block.settings.heading != blank %}
          <div class="heading">
            {{ block.settings.heading }}
          </div>
          {% endif %}
          {% if block.settings.text != blank %}
          <div class="text">
            {{block.settings.text}}
          </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
  {% when "image_text" %}
  <div class="container about-default-image-text">
    <div class="row">
      <div class="text col-12 col-md-6">
        <div class="text-left heading">
          {{block.settings.heading}}
        </div>
        <div class="text-left caption">
          {{block.settings.caption}}
        </div>
      </div>
      <div class="image col-12 col-md-6">
      	{% if block.settings.image != blank %}
        	<img class="w-100 lazyload" data-src="{{block.settings.image | img_url: "master"}}" />
        {% endif %}
      </div>
    </div>
  </div>
  {% when "info_blocks" %}
  <div class="container about-default-info-blocks">
    <div class="row">
      {% for i in (1..3) %}
      {% assign s_image = "image_" | append: i %}
      {% assign s_heading = "heading_" | append: i %}
      {% assign s_caption = "caption_" | append: i %}
      {% if block.settings[s_image] != blank and block.settings[s_heading] != blank and block.settings[s_caption] != blank %}
      <div class="info-block col-12 col-md-4">
        {% if block.settings[s_image] != blank %}
        <img class="lazyload" data-src="{{block.settings[s_image] | img_url: "master"}}" />
        {% endif %}
        <div class="heading">
          {{block.settings[s_heading]}}
        </div>
        <div class="caption">
          {{block.settings[s_caption]}}
        </div>
      </div>
      {% endif %}
      {% endfor %}
    </div>
  </div>
   {% when "review" %}
  <div class="container about-default-info-blocks">
    <div class="heading">{{block.settings.heading}}</div>
    <div class="row">
      {% for i in (1..3) %}
      {% assign s_review = "review_" | append: i %}
      {% assign s_date = "date_" | append: i %}
      {% if block.settings[s_review] != blank and block.settings[s_date] != blank %}
      <div class="info-block col-12 col-md-4">
        <div class="review-stars d-flex justify-content-center align-items-center">

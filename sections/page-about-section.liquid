<div class="page-about-section" data-section-id="{{section.id}}" data-section-type="page-about">
  {% for block in section.blocks %}
  {% case block.type %}
  {% when "welcome" %}
  <div class="about-welcome-wrapper col-12">
    <img class="w-100 lazyload" {% if block.settings.image != blank %} data-src="{{ block.settings.image | img_url: "master"}}"{% endif %} />
    <div class="about-welcome position-absolute">
      {% if block.settings.text != blank %}
      <div class="heading">{{ block.settings.text }}</div>
      {% endif %}
      {% if block.settings.sticker != blank %}
      <div class="sticker">{{ block.settings.sticker }}</div>
      {% endif %}
    </div>
  </div>
  {% when "text" %}
  <div class="container text-wrapper">
    <div class="container">
      {% if block.settings.heading != blank %}
      <div class="heading text-left">
        {{ block.settings.heading }}
      </div>
      {% endif %}
      <div class="texts row">
        {% if block.settings.text != blank %}
        <div class="text text-left text-capitalize col-6 col-xs-12">
          {{block.settings.text2}}
        </div>
        {% endif %}
        {% if block.settings.text2 != blank %}
        <div class="text text-left text-capitalize col-6 col-xs-12">
          {{block.settings.text2}}
        </div>
        {% endif %}
      </div>
    </div>
  </div>
  {% when "banner" %}
  <div class="about-banner-wrapper col-12">
    <img class="w-100 lazyload" {% if block.settings.image != blank %} data-src="{{ block.settings.image | img_url: "master"}}"{% endif %} />
    <div class="about-banner text-left position-absolute">
      {% if block.settings.text != blank %}
      <div class="heading">{{ block.settings.text }}</div>
      {% endif %}
      {% if block.settings.sticker != blank %}
      <div class="sticker">{{ block.settings.sticker }}</div>
      {% endif %}
    </div>
  </div>
  {% when "info" %}
  <div class="about-info-wrapper col-12  text-center">
    <div class="container">
      <div class="heading">{{block.settings.heading}}</div>
      <div class="row about-infos about-infos d-flex justify-content-between align-items-center flex-wrap">
        <div class="span-line-wrapper col-1"><div class="span-line"></div></div>
        {% for i in (1..3) %}
        {% assign s_title = "title" | append: i %}
        {% assign s_caption = "caption" | append: i %}
        <div class="about-info col-4 col-md-2">
          <div class="title text-uppercase">{{block.settings[s_title]}}</div>
          <div class="caption text-uppercase">{{block.settings[s_caption]}}</div>
        </div>
        {% if forloop.last == false %}
        <div class="span-line-wrapper col-4 col-md-2"><div class="span-line"></div></div>
        {% endif %}
        {% endfor %}
        <div class="span-line-wrapper col-1"><div class="span-line"></div></div>
      </div>
    </div>
  </div>
  {% when "shop" %}
  <div class="about-shop-wrapper col-12  text-center">
    <img class="col-12 col-md-8 w-100 lazyload" data-src="{{block.settings.image  | img_url: "master"}}" />
    <a class="button btn-link" href="{{block.settings.url}}">{{block.settings.button}}</a>
    <div class="about-shop position-absolute">
      <div class="heading-wrapper d-flex align-items-center">
        <div class="sticker">{{block.settings.sticker}}</div>
        <div class="heading">{{block.settings.heading}}</div>
      </div>
      <div class="caption">{{block.settings.caption}}</div>
    </div>
  </div>
  {% when "instagram" %}
  <div class="about-instagram-wrapper container">
    <div class="row">
      {% for i in (1..6) %}
      {% if i == 3 %}
      <div class="col-6 col-md-2 about-insta insta-info text-left d-flex justify-content-center align-items-center">
        <a href="{{block.settings.url}}">
          <div class="heading  text-left">{{block.settings.heading}}</div>
          <div class="caption">{{block.settings.caption}}</div>
        </a>
      </div>
      {% else %}
      {% assign s_image = "image" | append: i %}
      {% assign s_url = "url" | append: i %}
      {% if block.settings[s_image] != blank %}
      <div class="col-6 col-md-2  about-insta">
        <a href="{{block.settings[s_url]}}"><img class="lazyload" data-src="{{block.settings[s_image] | img_url: "master"}}" /></a>
      </div>
      {% endif %}
      {% endif %}
      {% endfor %}
    </div>
  </div>
  {% else %}
  {% endcase %}
  {% endfor %}
</div>

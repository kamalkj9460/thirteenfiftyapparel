{%- if section.blocks.size > 0 -%}
{%- capture section_class -%}
{% if section.settings.has_container %}container p-0{% endif %}
{%- endcapture -%}
{%- assign splide_custom_css = '--splide-arrow-size:2em;--splide-arrow-size-md:3em;--splide-arrow-bgc:#c6c6c66e;--splide-arrow-br:0;' -%}
<div class="section-outer" style="background-color:{{section.settings.color_bg}};{% if section.settings.pattern != 0 %}{% render 'ssh-pattern', _pattern: section.settings.pattern, _fillcolor: section.settings.color_pattern %}{% endif %}">
  <div id="creative-builder-{{section.id}}" class="{{section_class}}" data-section-id="{{ section.id }}" data-section-type="creative-builder" style="{{splide_custom_css}}">
    {%- if section.settings.title != empty and section.settings.heading_hide == false -%}
    <div class="cb-head col-p-100 pb-2 pt-4 d-flex align-items-start{% if section.settings.heading_center %} justify-content-center{% else %} justify-content-center justify-content-md-start{% endif %}{% if section.settings.has_padding %} px-1{% endif %}" style="--border-color:{{section.settings.underline_color}};--font-size-lg:{{section.settings.heading_fontsize}}px;--font-size-md:{{section.settings.heading_fontsize | times: 0.78 }}px;--font-size:25px">
      <span class="h3 custom-font-size{% if section.settings.heading_underline %} border-bottom pb-1{% if section.settings.underline_color != blank and section.settings.underline_color != 'rgba(0,0,0,0)' %} custom-border-color{% endif %}{% endif %}">{{section.settings.title}}</span>
    </div>
    {%- if section.settings.heading_button != blank -%}
    <a class="jm-all-btn" style="font-size: 1.2rem;font-weight: 500;text-decoration: underline;" href="{{section.settings.heading_button_url}}">{{section.settings.heading_button}}</a>
    {%- endif -%}
    {%- endif -%}
    <div class="cb-body col-p-100{% if section.settings.has_padding_smallscreen %} px-3{% endif %}{% if section.settings.has_padding %} py-sm-1{% if section.settings.has_container %} px-sm-1{% endif %}{% else %} px-sm-0{% endif %}">
      <div class="cb-body-wrapper creative-builder{% if section.settings.hori_scroll_mobile == true %} rt-mobile-snapscroll{% endif %}{% if section.settings.center_content %} justify-content-md-center{% endif %}">

        {%- assign group_mode = false -%}
        {%- assign slider_mode = false -%}
        {%- assign tab_mode = false -%}
        {%- assign tab_underline = false -%}
        {%- assign special_types = 'group-start,group-end,tab-start,tab-end' | split: ',' -%}

        {%- for block in section.blocks -%}
        {% capture block_class %}cb-item{% if block.settings.has_padding %} p-sm-1{% endif %}{% if slider_mode == true %} splide__slide{% else %} col-p{% endif %}{% endcapture %}
        {% capture block_pcol_css %}--pcol:{{block.settings.width}}%;--pmcol:{{block.settings.width_mobile}}%;{% endcapture %}
        {% capture block_id %}cb-item-{{block.id}}{% endcapture %}
        {% capture border_class %}
        {% if block.settings.border_top %} border-top-md{% endif %}{% if block.settings.border_bottom %} border-bottom-md{% endif %}{% if block.settings.border_left %} border-left-md{% endif %}{% if block.settings.border_right %} border-right-md{% endif %}{% if block.settings.mobile_border_top %} border-top-xs-only{% endif %}{% if block.settings.mobile_border_bottom %} border-bottom-xs-only{% endif %}{% if block.settings.mobile_border_left %} border-left-xs-only{% endif %}{% if block.settings.mobile_border_right %} border-right-xs-only{% endif %}{% endcapture %}

        {%- unless special_types contains block.type -%}
        {%- if tab_mode == true -%}
        <div class="rt-tab">
          <input class="rt-tab__radio" type="radio" name="rt-tabgroup-{{section.id}}" id="rt-tab-{{section.id}}{{block.id}}"{% if tab_first_item == true %} checked{% endif %}>
          {%- if block.settings.title != empty -%}
          <label class="h3{% if tab_underline == true %} pb-1 border-bottom{% if tab_underline_color != blank and tab_underline_color != 'rgba(0,0,0,0)' %} custom-border-color{% endif %}{% endif %}" for="rt-tab-{{section.id}}{{block.id}}">{{block.settings.title}}</label>
          {%- endif -%}
          <div class="rt-tab__content d-flex" {% if block.settings.height %} data-rt-tab--height="{{block.settings.height}}"{% endif %}>
            {%- assign tab_first_item = false -%}        
            {%- endif -%}
            {%- endunless -%}

            {%- case block.type -%}
            {%- when 'banner' -%}
            {%- assign color_bg = block.settings.color_bg -%}
            {% if block.settings.video_bg_enabled %}
            <style>
              @media (max-width: 767px) {
                #{{block_id}} .video {
                  display: block !important;
                }
              }
            </style>
            {% endif %}
            <div id="{{block_id}}" class="{% if block.settings.video_bg_enabled %}griditem{% endif %} position-relative {{block_class}}{{border_class}} banner text-pos-left custom-min-height {% if block.settings.hide_mobile %}hide-on-mobile{% endif %}" style="{{block_pcol_css}}--min-height:{{block.settings.mobile_height}}px;--min-height-md:{{block.settings.height}}px" {{ block.shopify_attributes }}>
              {% if block.settings.video_bg_enabled %}
              <svg aria-hidden="true" style="position:absolute;top:30px;right:35px;width:64px;z-index:1;" focusable="false" data-prefix="far" data-icon="video" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512" class="svg-inline--fa fa-video fa-w-18 fa-3x"><path fill="white" d="M543.9 96c-6.2 0-12.5 1.8-18.2 5.7L416 170.1v-58.3c0-26.4-23.2-47.8-51.8-47.8H51.8C23.2 64 0 85.4 0 111.8v288.4C0 426.6 23.2 448 51.8 448h312.4c28.6 0 51.8-21.4 51.8-47.8v-58.3l109.7 68.3c5.7 4 12.1 5.7 18.2 5.7 16.6 0 32.1-13 32.1-31.5V127.5C576 109 560.5 96 543.9 96zM368 200v198.9c-.6.4-1.8 1.1-3.8 1.1H51.8c-2 0-3.2-.6-3.8-1.1V113.1c.6-.4 1.8-1.1 3.8-1.1h312.4c2 0 3.2.6 3.8 1.1V200zm160 155.2l-112-69.8v-58.7l112-69.8v198.3z" class=""></path></svg>
              <div class="video">
                <video id="video" preload="none" muted autoplay loop style="width:100%; height:100%">
                  <source id="mp4" src="
                                        {%- liquid
                            case block.settings.video_source
                                when 'file'
                                    echo block.settings.mp4_url
                                when 'youtube'
                                    echo block.settings.youtube_url
                                else 
                                    echo 'http://media.w3.org/2010/05/sintel/trailer.mp4'
                            endcase
                        -%}
                                        " type="video/mp4">
                  <p>Your browser does not support HTML5 Video!</p>
                </video>
              </div>
              {% endif %}
              {%- if block.settings.cta_text != blank or block.settings.linklist_enabled == true -%}
              <div class="banner-content-wrapper text-vpos-top{% if block.settings.bg_image != blank %} bgimage-center-no-repeat lazyload{% endif %}" style="position:relative;background-color:{{color_bg}};{% if block.settings.pattern > 0 %}{% render 'ssh-pattern', _pattern: block.settings.pattern, _opacity: '0.25', _fillcolor: block.settings.color_pattern %}{% endif %}"{% if block.settings.bg_image != blank %}{% assign img_url = block.settings.bg_image | img_url: "master" %} data-bg="{{img_url}}"{% else %} data-noimage{% endif %}>
                {%-else-%}
                <style>
                  {%- if block.settings.bg_image != blank -%}
                  #{{block_id}} .banner-content-wrapper {
                    background-image: url({{ block.settings.bg_image | img_url: 'master' }});
                  }
                  {%- endif -%}
                  {%- if block.settings.bgm_image != blank -%}
                  @media (max-width:480px) {
                    #{{block_id}} .banner-content-wrapper {
                      background-image: url({{ block.settings.bgm_image | img_url: 'master' }});
                    }
                  }
                  {%- endif -%}
                </style>
                <a  {% if block.settings.is_lightbox %} id="lb-trigger-{{block_id}}" {% else %} href="{{block.settings.linked_url}}" {% endif %}
                   class="lb-trigger banner-content-wrapper text-vpos-top{% if block.settings.bg_image != blank %} bgimage-center-no-repeat lazyload{% endif %}" style="position:relative;background-color:{{color_bg}};;{% if block.settings.pattern > 0 %}{% render 'ssh-pattern', _pattern: block.settings.pattern, _opacity: '0.25', _fillcolor: block.settings.color_pattern %}{% endif %}"{% if block.settings.bg_image != blank %}{% assign img_url = block.settings.bg_image | img_url: "master" %} data-bg="{{img_url}}"{% endif %}>
                  {%-endif-%}
                  <div class="banner-texting p-2 position-absolute custom-absolute-pos {% if block.settings.text_align == "text-align-right" %}banner-text-right{% endif %} {% if block.settings.content_align_hori %} text-align-center{% else %} {{block.settings.text_align}}{% endif %} without--fx{% if block.settings.cta == blank %} without--cta{% endif %}{% if block.settings.linklist_enabled == false %} without--linklist{% endif %}{% if block.settings.content_align_hori %} flex-nowrap flex-row{% endif %}" style="--top-side:{{block.settings.side_padding_vert}}%;{% if block.settings.text_align == "text-align-right" %}--right-side:{{block.settings.side_padding_hori_right}}%;{% else %}--left-side:{{block.settings.side_padding_hori}}%;{% endif %}transform: translate({% if block.settings.side_padding_hori > 20 %}-50%{% else %}0{% endif %},{% if block.settings.side_padding_vert > 20 %}-50%{% else %}0{% endif %});z-index:1;">
                    {%-if block.settings.heading != blank-%}
                    <div class="b-heading h3{% if block.settings.heading_shadow == true %} has--text-shadow{% endif %}{% if block.settings.heading_bgcolor_use %} p-2 custom-bgcolor{% else %}{% if block.settings.content_align_hori == true %} mr-3{% else %} mb-3{% endif %}{% endif %} custom-font-size custom-font-weight custom-color" style="--bg-color:{{block.settings.heading_bgcolor}};--font-weight:{{block.settings.heading_weight}};--font-size-lg:{{block.settings.heading_size}}px;--font-size-md:{{block.settings.heading_size | times: 0.7 }}px;--font-size:22px;--color:{{block.settings.heading_color}};">
                      {{block.settings.heading}}
                    </div>
                    {%-endif-%}

                    {%-if block.settings.caption_image != blank-%}
                    <div class="b-img-caption">
                      <img src="{{ block.settings.caption_image | img_url: "master" }}" style="width:{{ block.settings.cap_img_size }}%;">
                    </div>	
                    {%-endif-%}

                    {%-if block.settings.cap != blank-%}
                    <div class="b-caption {{block.settings.text_align}} {%if block.settings.cap_shadow == true %} has--text-shadow{%-endif-%}{% if block.settings.cap_bgcolor_use %} p-2 custom-bgcolor{% endif %}{% if block.settings.content_align_hori == true %} mr-4{% else %} mb-4{% endif %} custom-font-size custom-color custom-font-weight" style="--bg-color:{{block.settings.cap_bgcolor}};--font-weight:{{block.settings.cap_weight}};--font-size-lg:{{block.settings.cap_size}}px;--font-size-md:{{block.settings.cap_size | times: 0.7 }}px;--font-size:18px;--color:{{block.settings.cap_color}};">
                      {{block.settings.cap}}
                    </div>	
                    {%-endif-%}

                    {%- if block.settings.linklist_enabled == true -%}
                    {%- if block.settings.linklist != blank and linklists[block.settings.linklist] != empty -%}
                    {%-assign _linklist = linklists[block.settings.linklist] -%}
                    <ul class="pl-0 custom-color " style="column-count:{{block.settings.linklist_col}};--color:{{block.settings.linklist_color}};--font-size:{{block.settings.linklist_size}}px;--font-weight:{{block.settings.linklist_weight}}">
                      {%- for _link in _linklist.links -%}
                      <li class="d-table pr-2 pr-md-5 pb-1" >
                        <a href="{{_link.url}}" class="custom-font-size custom-font-weight">{{_link.title}}</a>
                      </li>
                      {%- endfor -%}
                    </ul>
                    {%- else -%}
                    <ul class="pl-0 custom-color " style="column-count:{{block.settings.linklist_col}};--color:{{block.settings.linklist_color}};--font-size:{{block.settings.linklist_size}}px;--font-weight:{{block.settings.linklist_weight}}">
                      {%- for i in (1..12) -%}
                      <li class="d-table pr-2 pr-md-5 pb-1" >
                        <a href="#" class="custom-font-size custom-font-weight">MENU ITEM</a>
                      </li>
                      {%- endfor -%}
                    </ul>
                    {%-endif-%}
                    {%- endif -%}

                    {%-if block.settings.cta_text != blank-%}
                    <a {% if block.settings.is_lightbox %} id="lb-trigger-{{block_id}}" {% else %} href="{{block.settings.linked_url}}" {% endif %}
                       class="lb-trigger {% if block.settings.modern %}btn-modern{% else %}btn-squared custom-bgcolor{% endif %} cta custom-font-size custom-font-weight custom-color" style="border: 3px solid {{block.settings.cta_bordercolor}};--font-weight:{{block.settings.cta_weight}};--font-size:18px;--font-size-md:{{block.settings.cta_size}}px;--color:{{block.settings.cta_color}};{% if block.settings.modern == false %}--bg-color:{{block.settings.cta_bgcolor}}{% endif %}">{{block.settings.cta_text}}</a>
                    {%-endif-%}
                  </div>
                  {%- if block.settings.video_shadow %}
                        <div class="{% if block.settings.has_padding %}m-sm-1{% endif %}" style="background-image:linear-gradient(0,#0000009e,20%,transparent);width:100%;height:100%;position:absolute;z-index:0;"></div>
                  {%- endif -%}
                  {%-if block.settings.cta_text == blank and block.settings.linklist_enabled == false-%}
                </a>{%-else-%}
              </div>{%-endif-%}
              {% if block.settings.is_lightbox %}
              <svg aria-hidden="true" style="position:absolute;top:30px;right:35px;width: 64px;" focusable="false" data-prefix="far" data-icon="video" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512" class="svg-inline--fa fa-video fa-w-18 fa-3x"><path fill="white" d="M543.9 96c-6.2 0-12.5 1.8-18.2 5.7L416 170.1v-58.3c0-26.4-23.2-47.8-51.8-47.8H51.8C23.2 64 0 85.4 0 111.8v288.4C0 426.6 23.2 448 51.8 448h312.4c28.6 0 51.8-21.4 51.8-47.8v-58.3l109.7 68.3c5.7 4 12.1 5.7 18.2 5.7 16.6 0 32.1-13 32.1-31.5V127.5C576 109 560.5 96 543.9 96zM368 200v198.9c-.6.4-1.8 1.1-3.8 1.1H51.8c-2 0-3.2-.6-3.8-1.1V113.1c.6-.4 1.8-1.1 3.8-1.1h312.4c2 0 3.2.6 3.8 1.1V200zm160 155.2l-112-69.8v-58.7l112-69.8v198.3z" class=""></path></svg>
              {%-endif-%}
            </div>
            {% if block.settings.is_lightbox %}
            <div id="lb-{{block_id}}" class="lb-13fifty">
              <i id="lb-close-{{block_id}}" class="lb-close-btn fa fa-times"></i>
              <div class="lbw-13fifty">
                <video id="pop-video-{{block_id}}" controls class="pop-video" preload="metadata">
                  <source src="{{block.settings.linked_url}}" type="video/mp4">
                </video>
              </div>
            </div>
            <script>
              const clip = document.querySelectorAll({{block_id}});
            </script>

            <script>
              $(document).ready(function() {
                $("#lb-trigger-{{block_id}}").on("click", function() {
                  $("#lb-{{block_id}}").fadeIn(1000);
                  $('#pop-video-{{block_id}}').get(0).play();
                  });
                $("#lb-close-{{block_id}}").on("click", function() {
                  $("#lb-{{block_id}}").fadeOut(500);
                  $('#pop-video-{{block_id}}').get(0).pause();
                  $('#pop-video-{{block_id}}').get(0).currentTime = 0;
                  });
              });
            </script> 
            {%-endif-%}

            {%- when 'group-start' -%}
            <div id="cb-item-{{block.id}}" style="{{block_pcol_css}}" class="{{block_class}}{% if block.settings.is_slider %} is-slider no-pagination splide splide--arrowpos--{{block.settings.slider_arrow_pos}}{% else %} flex-wrap{% if block.settings.hori_scroll_mobile == true %} rt-mobile-snapscroll{% endif %}{% endif %}"{% if block.settings.is_slider %} data-splide='{"type":"slide","perMove":"1","perPage":"{{block.settings.slider_items}}","breakpoints":{"767":{% if block.settings.hori_scroll_mobile == true %}{"destroy":"true"}}{% else %}{"perPage":"{{block.settings.slider_items_mobile}}"}}{% endif %},"autoplay":{{block.settings.slider_autoplay}},"interval":"{{block.settings.slider_interval}}"}'{% endif %}>
              {%- assign group_mode = true -%}
              {% if block.settings.is_slider %}
              {%- assign slider_mode = true -%}
              {%- if block.settings.hori_scroll_mobile == true -%}
              {%- render 'slider-nav-buttons', custom_class: 'd-none d-md-block' -%}
              {%- else -%}
              {%- render 'slider-nav-buttons' -%}
              {%- endif -%}
              <div class="splide__track w-100">
                <div class="splide__list w-100{% if block.settings.hori_scroll_mobile == true %} rt-mobile-snapscroll{% endif %}">
                  {%- endif -%}
                  {%- when 'group-end' -%}
                  {%- if group_mode == true -%}
                  {%- assign group_mode = false -%}
                  {%- if slider_mode == true -%}
                  {%- assign slider_mode = false -%}
                </div>
              </div>
              {%- endif -%}
            </div>
            {%- endif -%}

            {%- when 'tab-start' -%}
            <div id="cb-item-{{block.id}}" class="{{block_class}} of-visible" style="{{block_pcol_css}}">
              {%- assign tab_mode = true -%}
              {%- assign tab_first_item = true -%}
              {%- if block.settings.heading_underline == true -%}
              {%- assign tab_underline = true -%}
              {%- endif -%}
              {%- assign tab_underline_color = block.settings.underline_color -%}
              <div data-rt-tabs class="rt-tabs col-p-100 mt-4{% if block.settings.heading_center %} justify-content-center{% endif %}" style="--border-color:{{tab_underline_color}}">
                {%- when 'tab-end' -%}
                {%- if tab_mode == true -%}
                {%- assign tab_mode = false -%}
                {%- assign tab_underline = false -%}
              </div>
            </div>
            {%- endif -%}

            {%- endcase -%}

            {%- unless special_types contains block.type -%}
            {%- if tab_mode == true -%}
          </div></div>
        {%- endif -%}
        {%- endunless -%}

        {%- endfor -%}
      </div>
    </div>
  </div>
</div>
{%- endif -%}

{% schema %}
{
    "name": "Image Hover to Video",
    "class": "index-section section-wrapper",
    "settings": [
        {
            "type": "header",
            "content": "Heading"
        },
        {
            "type": "text",
            "id": "title",
            "label": "Heading"
        },
        {
            "type": "checkbox",
            "id": "heading_hide",
            "label": "Hide heading",
            "default": false
        },
        {
            "type": "checkbox",
            "id": "heading_underline",
            "label": "Underline heading",
            "default": false
        },
        {
            "type": "color",
            "id": "underline_color",
            "label": "Color",
            "default": "#3a3a3a",
            "info": "Select None to use the default color"
        },
        {
            "type": "checkbox",
            "id": "heading_center",
            "label": "Center heading",
            "default": true
        },
        {
            "type": "range",
            "id": "heading_fontsize",
            "label": "Font size",
            "unit": "px",
            "min": 25,
            "max": 70,
            "step": 1,
            "default": 27
        },
        {
            "type": "header",
            "content": "Heading button"
        },
        {
            "type": "text",
            "id": "heading_button",
            "label": "Text",
            "info": "Leave empty to disable"
        },
        {
            "type": "url",
            "id": "heading_button_url",
            "label": "URL",
            "default": "/collections/all"
        },
        {
            "type": "header",
            "content": "Layout"
        },
        {
            "type": "checkbox",
            "id": "has_container",
            "label": "Within Container",
            "default": true
        },
        {
            "type": "checkbox",
            "id": "has_padding",
            "label": "Add padding",
            "default": false
        },
        {
            "type": "header",
            "content": "Advanced"
        },
        {
            "type": "color",
            "id": "color_bg",
            "label": "Background color",
            "default": "rgba(0,0,0,0)"
        },
        {
            "type": "range",
            "id": "pattern",
            "label": "Pattern",
            "min": 0,
            "max": 15,
            "step": 1,
            "default": 0,
            "info": "There are 15 pre-made patterns. Set 0 to disable."
        },
        {
            "type": "color",
            "id": "color_pattern",
            "label": "Pattern color",
            "default": "#b9b9b9"
        },
        {
            "type": "checkbox",
            "id": "center_content",
            "label": "Center content",
            "default": false
        },
        {
            "type": "checkbox",
            "id": "has_padding_smallscreen",
            "label": "Add padding on mobile",
            "default": false
        },
        {
            "type": "checkbox",
            "id": "hori_scroll_mobile",
            "label": "Horizontal scroll on mobile",
            "default": false
        }
    ],
    "blocks": [
        {
            "type": "group-start",
            "name": "▛ Group Start",
            "settings": [
                {
                    "type": "header",
                    "content": "General"
                },
                {
                    "type": "range",
                    "id": "width",
                    "min": 0,
                    "max": 100,
                    "step": 1,
                    "unit": "%",
                    "label": "Width",
                    "default": 100
                },
                {
                    "type": "range",
                    "id": "width_mobile",
                    "min": 0,
                    "max": 100,
                    "step": 1,
                    "unit": "%",
                    "label": "Mobile width",
                    "default": 100
                },
                {
                    "type": "checkbox",
                    "id": "hori_scroll_mobile",
                    "label": "Horizontal scroll on mobile",
                    "default": false
                },
                {
                    "type": "header",
                    "content": "Slider"
                },
                {
                    "type": "checkbox",
                    "id": "is_slider",
                    "label": "Make this group a Slider",
                    "default": false
                },
                {
                    "type": "range",
                    "id": "slider_items",
                    "min": 1,
                    "max": 6,
                    "step": 1,
                    "label": "Items per slide",
                    "default": 1
                },
                {
                    "type": "range",
                    "id": "slider_items_mobile",
                    "min": 1,
                    "max": 3,
                    "step": 1,
                    "label": "Items per slide on mobile",
                    "default": 2
                },
                {
                    "type": "checkbox",
                    "id": "slider_autoplay",
                    "label": "Autoplay",
                    "default": false
                },
                {
                    "type": "range",
                    "id": "slider_interval",
                    "min": 1000,
                    "max": 9000,
                    "step": 500,
                    "unit": "ms",
                    "label": "Time between slide (milliseconds)",
                    "default": 2000
                },
                {
                    "type": "select",
                    "id": "slider_arrow_pos",
                    "label": "Arrow position",
                    "options": [
                        {
                            "value": "cent-side",
                            "label": "Center at both sides"
                        },
                        {
                            "value": "bot-cent",
                            "label": "Bottom at center"
                        },
                        {
                            "value": "bot-left",
                            "label": "Bottom at left"
                        }
                    ],
                    "default": "cent-side"
                }
            ]
        },
        {
            "type": "group-end",
            "name": "▙ Group End"

{%- assign mmenu_class = '' -%}
{% capture mmenu_class %}{% if section.settings.mmenu_vertical == false %}p-0 container horizontal{% else %}vertical{% if section.settings.mmenu_static_vertical == true %} static{% endif %}{% endif %}{% endcapture %}
<div class="rt-pilot d-none" data-container-id="{{ section-mega-menus }}-content" data-destination-id="{{ section-mega-menus }}-placement">  
  <template id="{{ section-mega-menus }}-template">
  <div id="{{ section-mega-menus }}-content" 
      class="section-megamenu-content container-megamenu {{mmenu_class}}"
      data-_megamenu_id="{{section-mega-menus}}"
      data-_mmenu_sub_ct_animate_time ="{{_mmenu_sub_ct_animate_time}}"
      data-section-id="{{ section.id }}" data-section-type="mega-menu" 
      >
    <div  id="megamenu-{{ section.id }}"{% if section.settings.mmenu_vertical == false %} class="position-static"{% endif %}>
    {%- if section.settings.mmenu_vertical == true -%}
      <div id="menuHeading">
        <div class="megamenuToogle-wrapper">
          <div class="megamenuToogle-pattern">
            <div class="container">
              {{ section.settings.mmenu_navigation_text }}
            </div>
          </div>
        </div>
      </div>
      {%- else -%}
      <div class="megaMenuToggle">
        <div class="megamenuToogle-wrapper">
          <div class="megamenuToogle-pattern">
            <div class="container">
              <div><span></span><span></span><span></span></div>
              {{ section.settings.mmenu_navigation_text }}
            </div>
          </div>
        </div>
      </div>
      {%- endif -%}
      <div class="megamenu-wrapper">
        <div class="megamenu-pattern">
          <ul class="megamenu modern show{{' '}}{%- if section.settings.mmenu_animation_type != 'none' -%}{{ section.settings.mmenu_animation_type }}{%- endif -%}">
            {%- if section.settings.mmenu_home_icon == true -%}
            <li class="home">
              <a href="{{shop.url}}">
                <i class="fa fa-home"></i>
              </a>
            </li>
            {%- endif -%}

            {%- if section.settings.mmenu_linklist_only == false -%}
            {%- include 'section-mega-menu-item' -%}
            {%- else -%}
            {%- if settings.page_direction == 'LTR'-%}
            {%- include 'mega-menu-content-linklist' -%}
            {%- else -%}
            {%- include 'mega-menu-content-linklist-rtl' -%}
            {%- endif -%}
            {%- endif -%}
          </ul>
        </div>
      </div>
    </div>
  </div>
  </template>
</div>
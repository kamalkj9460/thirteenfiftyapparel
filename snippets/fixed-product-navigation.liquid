<div class="fixed-product-navigation">
  {%- if collection.previous_product != blank -%}
  {%- assign product_handle = collection.previous_product | split: '/' | last -%}
  {%- assign previous_product = all_products[product_handle] -%}

<script type='application/json' class='bold-product-json'>{{ previous_product | json }}</script>
  <div class="next-product clearfix">
    <div class="info">
      <div class="name">
        <a href="{{collection.previous_product}}">{{previous_product.title}}</a>
        <div class="price"><span class="money"><span class="money" data-product-id="{{ product.id }}">{{previous_product.price | money}}</span></span></div>
      </div>
    </div>
    <div class="image">
      <a href="{{collection.previous_product}}">
      	<img class="lazyload" src='data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==' data-src="{{previous_product.featured_image.src | img_url:'100x'}}" alt="{{previous_product.title | escape}}" />
      </a>
    </div>
  </div>
  {%- endif -%}
  {%- if collection.next_product != blank -%}
  {%- assign product_handle = collection.next_product | split: '/' | last -%}
  {%- assign next_product = all_products[product_handle] -%}

<script type='application/json' class='bold-product-json'>{{ next_product | json }}</script>
  <div class="next-product right clearfix">
    <div class="image">
      <a href="{{collection.next_product}}"><img class="lazyload" src='data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==' data-src="{{next_product.featured_image.src | img_url:'100x'}}" alt="{{next_product.title | escape}}" /></a>
    </div>
    <div class="info">
      <div class="name">
        <a href="{{collection.next_product}}">{{next_product.title}}</a>
        <div class="price"><span class="money"><span class="money" data-product-id="{{ product.id }}">{{next_product.price | money}}</span></span></div>
      </div>
    </div>
  </div>
  {%- endif -%}
</div>
html,body { 
  margin: 0;
  padding: 0;
  border: 0;
  overflow: hidden;
  height: 100vh; 
}
html {
  box-sizing: border-box;
}
*, *:before, *:after {
  box-sizing: inherit;
}
body { 
  font-family:  {{ body_font.family }}, {{ body_font.fallback_families }};
  font-size:  14px;
  font-weight: 500;
  line-height: 1;
  text-transform: uppercase;
}
button {
  font-family:  {{ body_font.family }}, {{ body_font.fallback_families }};
  font-weight: 500;
  height: 40px;
  text-transform: uppercase;
  border-radius: 0;
  border: none;
  padding: 10px 20px;
  appearance: none;
}
.group-input input {
  font-family:  {{ body_font.family }}, {{ body_font.fallback_families }};
  font-weight: 500;
  height: 40px;
  border: none;
  margin-right: 10px;
  outline: none;
  text-transform: uppercase;
  padding: 10px 20px;
  min-width: 200px;
}
.password-wrapper {
  background-size: cover;
  background-repeat: no-repeat;
  background-position: bottom center;
  width: 100%;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  text-align: center;
  padding-top: 20px;
}
.heading {
  font-size: 50px;
  padding: 40px 0 30px 0;
}
.caption {
  font-size: 25px;
  padding-bottom: 30px;
}
.heading.form-heading {
  font-size: 25px;
  padding: 0 0 20px 0
}
.password-content {
  max-width: 1024px;
  padding: 0 20px 
} 
.password__input-group {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
}
.form-content form {
  max-width: 300px;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  flex-flow: column;
  margin: 0 auto;
}
.newsletter-terms-conditions {
  margin-top: 10px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.custom-checkbox {
  display: block;
  position: relative;
  padding-left: 30px;
  margin-bottom: 10px;
  margin-top: 0;
  cursor: pointer;
  font-size: 12px;
  line-height: 20px;
  color: #ccc;
  text-transform: uppercase;
  font-weight: 500;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
}
.custom-checkbox input {
  position: absolute;
  opacity: 0;
  cursor: pointer;
  height: 0;
  width: 0;
}
.custom-checkbox .checkmark {
  position: absolute;
  top: 0;
  left: 0;
  height: 20px;
  width: 20px;
  background-color: #eee;
}
.checkmark:after {
  content: "";
  position: absolute;
  display: none;
  left: 6px;
  top: 1px;
  width: 8px;
  height: 15px;
  border: solid white;
  border-width: 0 3px 3px 0;
  -webkit-transform: rotate(45deg);
  -ms-transform: rotate(45deg);
  transform: rotate(45deg);
}
.custom-checkbox input:checked ~ .checkmark:after {
  display: block;
}
.custom-checkbox input:checked ~ .checkmark {
  background-color: #2196F3;
}
.custom-checkbox a {
  color: #000;
}
.button-disabled {
  pointer-events: none;
  opacity: 0.5
}
span.countdown-row {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: nowrap;
}
span.countdown-section {
  display: inline-flex;
  padding: 1em;
  flex-flow: column;
  font-size: 25px;
  font-weight: 500;
}
span.countdown-period {
  font-size: 13px;
  margin-top: 10px;
}
.password-countdown.is-countdown {
  margin-bottom: 20px;
  width: fit-content;
  margin-left: auto;
  margin-right: auto;
}
div#weketing_google_translate_element {
    display: none;
}
.social-icons {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
  margin-left: -20px
}
.notice-close svg,
.social-icons svg {
  width: 20px;
  height: 20px;
  z-index: 2;
}
.header-notice{
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  min-height: 50px;
  padding: 0 20px;
}
.social-icons a  {
  width: 50px;
  height: 50px;
  display: flex;
  justify-content: center;
  align-items: center;
  border-right: 1px solid #dee2e6 !important;
  position: relative
}
.social-icons a:before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0.4;
}
@media(max-width: 767px){
  .heading{
    font-size: 30px
  }
  .caption{
    font-size: 18px
  }
  .heading.form-heading {
    font-size: 16px
  }
}